" remember the last cursor location of the file
au BufReadPost *
\ if line("'\"") > 0 && line("'\"") <= line("$") |
\ exe "norm g`\"" |
\ endif

" remove trailing whitespaces on save
autocmd BufWritePre * :%s/\s\+$//e

"vim-plug setting
call plug#begin('~/.vim/plugged')
Plug 'hrsh7th/cmp-buffer'
Plug 'hrsh7th/cmp-cmdline'
call plug#end()
